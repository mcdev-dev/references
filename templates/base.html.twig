<!doctype html>
<html lang="fr">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,400i,700,700i,900,900i&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css">  
    <!-- lesCityZens CSS style -->
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">

    <!-- jQuery CDN -->
    <script
    src="https://code.jquery.com/jquery-3.4.1.min.js"
    integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
    crossorigin="anonymous"></script>
    <!-- Popper.js, then Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    
    <!-- lesCityZens JS App -->
    <script src="{{ asset('js/app.js') }}"></script>

    <title>{{ title }}</title>
  </head>

  <body>

    <header>
        <div class="top">
            <div class="social_media">
                <a href=""><i class="fab fa-facebook-f"></i></a>
                <a href=""><i class="fab fa-twitter"></i></a>
                <a href=""><i class="fab fa-linkedin-in"></i></a>
                <a href=""><i class="fab fa-youtube"></i></a>
            </div>
            <div class="search_bar">
                <form id="query" action="" method="post">
                    <input type="text" name="rechercher" id="rechercher">
                    <i class="fas fa-search"></i>
                </form>
            </div>
            <div class="authentication">
                {% if is_granted('ROLE_ADMIN') %}  
                    <div class="admin nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-tools"></i>Admin</a>
                        <div class="dropdown-menu aria-labelledby="navbarDropdown"">
                            <a class="dropdown-item" href="#"><i class="fas fa-users-cog"></i>Gestion des utilisateurs</a>
                            <a class="dropdown-item" href="#"><i class="far fa-address-book"></i>Gestion des contacts</a>
                            <a class="dropdown-item" href="#"><i class="fas fa-file-signature"></i>Gestion des contenus</a>
                        </div>
                    </div>
                {% endif %}
                
                {% if is_granted('ROLE_USER') %}  
                    <div class="disconnect"><a href="{{ path('deconnexion') }}"><i class="fas fa-power-off"></i>Déconnexion</a></div>
                {% endif %}
                {% if not is_granted('ROLE_USER') %}
                    <div class="connect"><a href="{{ path('connexion') }}">Se connecter</a></div>
                    <div class="register"><a href="{{ path('inscription') }}">S'inscrire</a></div>
                {% endif %}
            </div>
        </div>
        <nav class="navbar">
            <div class="container">
                <div class="logo">
                    <a href="{{ path('home') }}"><img src="{{ asset('photo/logotype_lcz.svg') }}" alt=""></a>
                </div>
                <ul class="navigation">
                    <li class="{{ (title == 'Accueil') ? 'navActive' : '' }}"><a href="{{ path('home') }}">Accueil</a></li>
                    <li class="{{ (title == 'Fabrique urbaine collaborative') ? 'navActive' : '' }}"><a href="">Fabrique urbaine collaborative</a></li>
                    <li class="{{ (title == 'Habitat participatif') ? 'navActive' : '' }}"><a href="">Habitat participatif</a></li>
                    <li class="{{ (title == 'Références') ? 'navActive' : '' }}"><a href="">Références</a></li>
                    <li class="{{ (title == 'Contact') ? 'navActive' : '' }}"><a href="{{ path('contact_email') }}">Contact</a></li>
                </ul>
            </div>
        </nav>

    </header>

    <div class="scrollBtn">
        <div class="scroller"><i class="fas fa-arrow-up"></i></div>
        <div class="textScroll">Retour en haut</div>
    </div>

    <main>
        <div class="container">
            {% if title != 'Inscription' and title != 'Connexion' %}
                {% for alerte in app.flashes('success') %}
                    <div class="alert alert-success">{{ alerte | raw }}</div>
                {% endfor %}

                {% for alerte in app.flashes('errors') %}
                    <div class="alert alert-danger">{{ alerte | raw }}</div>
                {% endfor %}
            {% endif %}

            {% block content %}

            {% endblock %}

        </div>

        {% block contentFluid %}
        {% endblock %}
    </main>

    <footer>
        <div class="container">
            <span class="copy">&copy; {{ 'now' | date('Y') }} Les CityZens</span> | <a href="">Presse</a> | <a href="">Mentions légales</a> | <a href="">Politique de confidentialité</a>
        </div>
    </footer>

    
  </body>
</html>