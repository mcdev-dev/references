{% extends 'base.html.twig' %}

{% set title = 'Ajout de l\'utilisateur' %}

{% block content %}

<div class="mt-4 mb-4 col-md-6 mx-auto pl-0">
    <a class="undo" href="{{ path('user_list') }}">
        <i class="icon-logout1"></i>
    </a>
</div>
<div class="row justify-content-md-center">
    <div class="col-md-6">
        <h3 class="text-center title">Ajouter un utilisateur</h3>
        <hr class="mt-4 mb-4">

        {{ form_start(form) }}

        {{ form_errors(form.civilite) }}
        {{ form_row(form.civilite, { 'label' : 'Civilité' }) }}

        {{ form_errors(form.username) }}
        {{ form_widget(form.username, { 'attr' : { 'placeholder' : 'Nom d\'utilisateur', 'class' : 'form-group' } }) }}

        {{ form_errors(form.password) }}
        {{ form_widget(form.password, { 'attr' : { 'placeholder' : 'Mot de passe', 'class' : 'form-group' } }) }}

        {{ form_errors(form.nom) }}
        {{ form_widget(form.nom, { 'attr' : { 'placeholder' : 'Nom', 'class' : 'form-group' } }) }}

        {{ form_errors(form.prenom) }}
        {{ form_widget(form.prenom, { 'attr' : { 'placeholder' : 'Prénom', 'class' : 'form-group' } }) }}

        {{ form_errors(form.email) }}
        {{ form_widget(form.email, { 'attr' : { 'placeholder' : 'Email', 'class' : 'form-group' } }) }}

        {{ form_row(form.abonneNewsletter, { 'label' : 'En cochant cette case, j\'accepte de recevoir la newsletter de LesCityZens.' }) }}

        <div class="form-group mx-auto col-md-4">
            <button type="submit" class="btn btnSubmit col-12">Ajouter</button>
        </div>

        <hr class="mt-4 mb-4">

        <div class="text-center">Vous avez déjà un compte LesCityZens ? <a class="doHover ml-2 text-uppercase"
                href="{{ path('connexion') }}">Se connecter</a></div>

        {{ form_end(form) }}

        <br>
    </div>
</div>

{% endblock %}