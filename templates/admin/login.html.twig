{% extends 'admin/base.html.twig' %}

{% set title = 'Connexion pour l\'Administrateur' %}

{% block body %}

    <div class="row justify-content-md-center">
        <div class="bg-light col-md-6 adminConnect">
            <div class="px-4 py-4 col">
                {% if hasError %}
                <div class="alert alert-danger mb-4"><strong>Désolé !</strong> Erreur sur les identifiants.</div>
                {% endif %}
                <h2 class="text-center title">Connexion Admin</h2>
                <hr class="mt-4 mb-4">
    
                <form action="{{ path('connexion') }}" method="post">
    
                    <div class="form-group">
                        <label for="username">Nom d'utilisateur</label>
                        <input type="text" name="_username" value="{{ username }}" id="username" class="form-control">
                    </div>
    
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control">
                    </div>
    
                    <br><div class="form-group">
                        <button type="submit" class="btn btnSubmit col-12">Se connecter</button>
                    </div>

                    <div class="small__sign__in text-center mt-4">Vous n'avez pas encore de compte ? <a href="">Je m'inscris.</a> </div>
    
                </form>

                <br>
            </div>
        </div>
    </div>

{% endblock %}