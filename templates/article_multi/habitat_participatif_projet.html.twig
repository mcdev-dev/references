{% extends 'base.html.twig' %}

{% set title = 'Projet Habitat participatif' %}

{% block content %}
	<div class="mb-4">
		<a href="{{ path('habitat_participatif') }}">
			<div class="undo"></div>
		</a>
	</div>
	<div class="titleArtBgColorNautral mb-4 head1">{{ articleMulti.titre }}</div>

	<br><div class="bd-example">
		<div id="carouselHP" class="carousel slide" data-ride="carousel">
			<ol class="carousel-indicators">
				<li data-target="#carouselHP" data-slide-to="0" class="active"></li>
				<li data-target="#carouselHP" data-slide-to="1"></li>
				<li data-target="#carouselHP" data-slide-to="2"></li>
			</ol>
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img src="{{ asset('images/photos/') ~ articleMulti.images[0].imageName }}" class="d-block w-100" alt="{{ articleMulti.titre }}">
				</div>
				{% for image in articleMulti.images %}
					{% if not loop.first %}
						<!-- !IMPORTANT : Cette condition permet de ne pas afficher le premier élément du tableau. -->
						<div class="carousel-item">
							<img src="{{ asset('images/photos/') ~ image.imageName }}" class="d-block w-100" alt="articleMulti.titre">
						</div>
					{% endif %}
				{% endfor %}
			</div>
			<a class="carousel-control-prev" href="#carouselHP" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselHP" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</div>

	<div class="mt-4 mb-4 titleProject">
		{{ articleMulti.description | raw }}
		<a class="btn btnSubmit mt-4 mb-4" href="{{ path('connexion') }}">Participer</a>
		{{ articleMulti.transport | raw }}
		<div class="row alignMiddle">
			<div class="col-md-6">
				{{ articleMulti.santeServicesSociaux | raw }}
			</div>
			<div class="col-md-6">
				<img src="{{ asset('photo/undraw_doctors_hwty.svg') }}" alt="Santé et services sociaux" class="img-fluid">
			</div>
		</div>
		{{ articleMulti.servicesAdmin | raw }}
		<div class="row alignMiddle">
			<div class="col-md-6">
				{{ articleMulti.education | raw }}
			</div>
			<div class="col-md-6">
				<img src="{{ asset('photo/undraw_exams_g4ow.svg') }}" alt="Santé et services sociaux" class="img-fluid">
			</div>
		</div>
		<div class="row alignMiddle">
			<div class="col-md-6">
				<img src="{{ asset('photo/undraw_track_and_field_33qn.svg') }}" alt="Santé et services sociaux" class="img-fluid">
			</div>
			<div class="col-md-6">
				{{ articleMulti.sports | raw }}
			</div>
		</div>

	</div>

{% endblock %}
