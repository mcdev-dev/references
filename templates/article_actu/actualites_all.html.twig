<h2 class="text-center titleArtBgColor">Actualités & événements</h2>

<div class="row">
	{% for article in articles %}
		<div class="col-md-4 actuBlock">
			<div class="date mb-2 mt-4">{{ (article.categorie == 'actualites') ? 'Actualités' : '' }}
				|
				{{ article.createAt | date('d.m.Y') }}</div>
			<div class="actuImg">
				<a href="{{ path('article_actualite', { 'id' : article.id }) }}">
					<img src="{{ asset('images/web/') ~ article.imageName }}" alt="{{ article.titre }}" class="img-fluid">
				</a>
			</div>
			<div class="actuPos">
				<a href="{{ path('article_actualite', { 'id' : article.id }) }}">
					<h4 class="mt-3">{{ article.titre }}</h4>
					<div class="mt-3 contentActu">{{ article.contenu | striptags | truncate(200,true) | raw }}</div><br>
				</a>
			</div>
		</div>
	{% endfor %}
</div>
