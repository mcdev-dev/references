{% extends 'base.html.twig' %}

{% set title = 'Générer un nouveau mot de passe' %}

{% block content %}

    <div class="row justify-content-md-center">
        <div class="col-md-6">
            <h3 class="text-center">Générer un nouveau mot de passe</h3><br>
            {{ form_start(form) }}

                <div class="form-group">
                    <label for="email_lost">Email</label>
                    <input type="text" id="email_lost" name="email_lost" placeholder="Votre email" class="form-control">
                </div>

            {{ form_rest(form) }}
            
                <div class="form-group text-center">
                    <button type="submit" class="btn btnSubmit mt-2">Générer !</button>
                </div>
            {{ form_end(form) }}
            
        </div>
    </div>


{% endblock %}